<h1>管理者画面</h1>

  <table class='table table-hover'>
    <tr class="dropdown">
      <th>ユーザーID</th>
      <th>名前</th>
      <th>タスク数</th>
    </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><タスク数>：<%= user.tasks.count %></td>
      <td><%= link_to '詳細', admin_user_path(user.id), class:"btn-success" %></td>
      <td><%= link_to "編集", edit_admin_user_path(user.id), class:"btn-warning" %></td>
      <td><%= link_to '削除', admin_user_path(user.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class:"btn-danger" %></td>
      <% if user.admin %>
        <td><span class="glyphicon glyphicon-user" aria-hidden="true"></span>管理者</td>
      <% end %>
    </tr>
  <% end %>
</table>
<%= link_to '新規登録', new_admin_user_path, class:"btn btn-info" %>
