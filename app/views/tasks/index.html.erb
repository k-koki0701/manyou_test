<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<h1>タスク一覧</h1>
<%= form_with(method: :get, local: true) do |f| %>
  <div class="field">
    <%= f.label :タスク名%>
    <%= f.text_field :task_name, placeholder: "検索..." %>
    <%= f.select :status, [["未着手", "未着手"], ["着手中", "着手中"], ["完了", "完了"]], {include_blank: ''} %>
    <%= f.submit :検索 %>
  </div>
<% end %>
<table>
  <tr>
    <th>タスク名</th>
    <th>詳細</th>
    <th>終了期限<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true"), class: "sort_period" %></th>
    <th>ステータス</th>
    <th>優先順位<%= link_to "優先順位でソートする", tasks_path(sort_priority: "true"), class: "sort_priority" %></th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td class="task_row"><%= task.task_name %></td>
    <td><%= task.task_detail %></td>
    <td><%= task.end_period.strftime("%Y-%m-%d") %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
    <td><%= link_to "編集", edit_task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>

<%= paginate @tasks %>

<%= link_to '新しくタスクを登録する', new_task_path %>
