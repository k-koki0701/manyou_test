<%= form_with(model: @task, local: true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "task_row">
    <div class="task_name">
      <%= form.label :タスク名 %>
      <%= form.text_field :task_name %>
    </div>
    <div class="task_detail">
      <%= form.label :詳細 %>
      <%= form.text_area :task_detail %>
    </div>
    <div class="end_period">
      <%= form.label :終了期限 %>
      <%= form.date_select :end_period %>
    </div>
    <div class="status">
      <%= form.label :ステータス %>
      <%= form.select :status, [["未着手", "未着手"], ["着手中", "着手中"], ["完了", "完了"]], include_blank: "選択して下さい" %>
    </div>
  </div>
  <%= form.submit button_text%>
<% end %>
<%= link_to "タスク一覧にもどる", tasks_path %>
